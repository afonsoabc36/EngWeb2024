extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de Compositores  
                a.w3-btn.w3-round.w3-blue(href="/compositores/registo") +
        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Biografia
                    th Data de Nascimento
                    th Data de Óbito
                    th Período
                    th Ações
        
                each writer in compositores
                    tr
                        td 
                            a(href=`/compositores/${writer.id}`)= writer.nome
                        td= writer.bio
                        td= writer.dataNasc
                        td= writer.dataObito
                        td
                            a(href=`/periodos/${writer.periodo}`)= writer.periodo
                        td
                            | [
                            a(href=`/compositores/edit/${writer.id}`) Edit
                            | ] [
                            a(href=`/compositores/delete/${writer.id}`) Delete
                            | ]
        footer.w3-container.w3-teal
