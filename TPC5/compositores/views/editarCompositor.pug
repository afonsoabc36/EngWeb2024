extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple
            h2 Formulário do compositor
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value= writer.id)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value= writer.nome)
                label Biografia
                input.w3-input.w3-round(type="text" name="bio" value= writer.bio)
                label Data de Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" value= writer.dataNasc)
                label Data de Óbito
                input.w3-input.w3-round(type="text" name="dataObito" value= writer.dataObito)
                label Período
                input.w3-input.w3-round(type="text" name="periodo" value= writer.periodo)
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Editar
        footer.w3-container.w3-purple
            h5 Generated by Afonso Silva, 15th March 2024 - 
                | [
                a(href="/compositores/" + writer.id) Voltar
                | ]