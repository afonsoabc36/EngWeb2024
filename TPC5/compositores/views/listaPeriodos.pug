extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de Períodos 
                a.w3-btn.w3-round.w3-blue(href="/periodos/registo") +
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Ações
                each periodo in periodos 
                    tr 
                        td #{periodo.id}
                        td
                            a(href=`/periodos/${periodo.nome}`)= periodo.nome
                        td
                            | [
                            a(href=`/periodos/edit/${periodo.id}`) Edit
                            |]
                            | [
                            a(href=`/periodos/delete/${periodo.id}`) Delete
                            |]
        footer.w3-container.w3-teal
            h5 Generated by Afonso Silva, 15th March 2024