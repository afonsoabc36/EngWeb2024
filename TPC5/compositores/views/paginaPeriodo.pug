extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Compositores do período #{periodo}
        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Data de Nascimento
                    th Data de Óbito
                each compositor in compositores
                    tr
                        td 
                            a(href=`/compositores/${compositor.id}`)= compositor.nome
                        td #{compositor.dataNasc}
                        td #{compositor.dataObito}
        footer.w3-container.w3-teal
            address Gerado por Afonso Silva, 15th March 2024 - 
                | [
                a(href="/periodos") Voltar
                | ]